                style="@style/MyButton_blue_dark"
                android:drawableTop="@drawable/software_drone_cursor_y1"
                android:textSize="0sp"
                />

            <!--
            <Button
                android:id="@+id/Button_Left2"
                android:layout_width="wrap_content"
